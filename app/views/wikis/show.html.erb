<h1><%= @wiki.title %></h1>

<div class="row">
  <div class="col-md-12">
    <%= link_to "Return to Index", wikis_path %>

    <p><br /><%= markdown(@wiki.body) %></p>

    <p> Wiki Created by: <%= @wiki.creator.name %> </p>

    <%= render partial: 'collaborator_list', locals: {collaborators: @wiki.collaborators} %>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
    <%= render partial: 'edit_button', locals: { wiki: @wiki } %>
  </div>
  <div class="col-md-2">
    <%= render partial: 'collaborator_button', locals: { wiki: @wiki } %>
  </div>
  <div class="col-md-2">
    <%= render partial: 'delete_button', locals: { wiki: @wiki } %>
  </div>
</div>
